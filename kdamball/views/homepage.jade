extends layout


block body
    .wrapper
        img#kado(src="/images/kado.jpg" alt="Kado Spinning")

        #welcome
            h1 Hi, There
            p.bubble
                | I'm <strong>Kado</strong>. <br>
                | I work with Web Technologies. I use JavaScript (Front-end &amp; Node.js), HTML(5), CSS(3), Python, and PHP (in that order).
                | I am also interested in all things data: Econometrics, web-data scrapping, machine learning, data mining and data visualizations.
                | Feel free to contact me about any of the topics above.
                | <small id="message">Oh, and please don't click the picture, I get rather dizzy...</small>

            h2 More About Me:

        #features
            ol
                li
                    h2 Recent Public Activity:
                    ul.gh-api#proj
                        each val in [1,2,3,4,5]
                            li
                            br

                li
                    h2 Projects:
                    ul#proj(role="navigation")
                        each src, project in {"Nichekie": "http://nichekie.com", "Autotech Wheel": "https://autotechmap.honeypot.io/", "Animatics Media": "http://animaticsmedia.com", "Responsive Images": "http://www.toptal.com/responsive-web/one-size-fits-some-an-examination-of-responsive-image-solutions", "Soundbum": "/Soundcloud"}
                            li
                                a(href=src) #{project}
                            br

                li 
                    h2 Contact/Links:
                    ul#proj(role="navigation")
                        each link, name in {GitHub: "http://github.com/kdamball", Work: "https://www.honeypot.io/pages/about", LinkedIn: "http://linkedin.com/pub/kado-damball/56/358/688", Blog: "http://blog.kdamball.com", Twitter: "http://twitter.com/kdamball", Resume: "/resume", Toptal: "https://www.toptal.com/javascript#evented-future"}
                            li
                                a(href=link) #{name}
                            br
                        li <span id="mail">Email</span>
                        br

    span#plus 
        a(href="https://plus.google.com/+KadoDamball") Plus

    script(src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js")
    script(src="/js/GHApi.min.js")
    script(src="/js/kado.min.js")
